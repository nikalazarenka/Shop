@model Clothes

<div class="col-lg-4">
    <img class="img-thumbnail" src="@Model.Image" alt="@Model.Name" />
    <h2>@Model.Name</h2>
    <p>@Model.Description</p>
    <p>Price: @Model.Price.ToString("c")</p>
    <p><a class = "btn btn-warning" asp-controller="ShopCart" asp-action="addToCart" asp-route-id="@Model.Id">Add to Сart</a></p>
</div>